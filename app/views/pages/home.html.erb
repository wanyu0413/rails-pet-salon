<%# pe %>
<div class="navbar">
    <div class="header-logo">
        <%= image_tag 'Logo.svg', alt: 'Logo' %>
    </div>

    <div class="navbar-links">
        <div class="btn" id="btn-flow">
            <%= link_to "Flow", "#flow", class: "btn-text" %>
        </div>
    
        <div class="btn" id="btn-menu">
            <%= link_to "Menu", "#menu", class: "btn-text" %>
        </div>

        <div class="btn" id="btn-location">
            <%= link_to "Location", "#location", class: "btn-text" %>
        </div>
    </div>
</div>

<div class="content">
    <div class="about">
        <div class="dach-body"></div>
        <%=image_tag  'duck.svg', alt: 'Duck', class: 'icon-duck' %>
        <div class="about-content">
            <h1 class="title">OniDon</h1>
            <h3 class="subtitle">For dogs with style that goes on and on! </h3>
            <p>We're a cozy little pet salon with a big heart, dedicated to making your furry best friends look and feel amazing.</p>
            <p>From bubbly baths to fresh haircuts and belly rubs in between, we make grooming a fun and stress-free experience. </p>
            <%= image_tag 'long-body.svg', alt: 'Long body dachshund bg', class: 'img-long-dach' %>
        </div>
    </div>

    <div id="flow"></div>
    <div id="menu"></div>
    <div id="location"></div>
</div>