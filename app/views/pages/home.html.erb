        <%= image_tag 'Logo.svg', alt: 'Logo' %>
    </div>

    <div class="navbar-links">
        <div class="btn" id="btn-flow">
            <%= link_to "Flow", "#flow", class: "btn-text" %>
        </div>
    
        <div class="btn" id="btn-menu">
            <%= link_to "Menu", "#menu", class: "btn-text" %>
